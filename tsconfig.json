{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": ["es2015", "es2017", "dom"],
    "skipLibCheck": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "rootDirs": ["."]
  },
  "exclude": ["./node_modules"],
  "include": ["src/index.ts"],
  "files": ["src/index.ts"]
}
